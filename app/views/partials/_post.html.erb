<div class="p-post-container">
  <h2>
    <%= post.title %> by <%= post.author.name %>
    <span class="like-span">
      Comments: <%= post.comments_counter %> |  Likes: <%= post.likes_counter %>
    </span>
  </h2>

  <p><%= post.text %></p>

  <%= button_to 'Like',
    user_post_likes_path(post_id: post.id),
    class: 'btn btn-like'
  %>

  <% if can? :destroy, post %>
    <%= button_to 'Delete',
      user_post_path(user_id: post.author.id, id: post.id),
      method: :delete,
      data: {confirm: 'Are you sure?'},
      class: 'btn btn-like'
    %>
  <% end %>
</div>
