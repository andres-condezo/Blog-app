<%= form_with model: @post, url: user_posts_url, class: 'post-form-container' do |f| %>
  <div class="title-field-container">
    <%= f.label :title, class: 'title-label' %>
    <%= f.text_field :title, placeholder: 'Title', class: 'title-text-field' %>
  </div>

  <div class="content-container">
    <%= f.label :content, class: 'content-label' %>
    <%= f.text_area :text, rows: 5, placeholder: 'Content...', class: 'content-text-area' %>
  </div>

  <div class="submit-btn-container">
    <%= f.submit 'Create post', class: 'submit-btn' %>
  </div>
<% end %>
