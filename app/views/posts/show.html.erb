<%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-like" %>
<%= render partial: 'partials/post', locals: { post: @current_post } %>
<% if @current_post.comments_counter > 0 %>
  <div class="comment">
    <% @current_post.comments.each do |comment| %>
      <%= render partial: 'partials/comment', locals: { comment: comment } %>
    <% end %>
  </div>
<% end %>
<%= render partial: 'partials/comment_form', locals: { post_id: @current_post.id, user_id: params[:user_id] } %>
